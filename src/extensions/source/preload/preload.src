	SVLook			= TRUE ;
	Moveable		= TRUE ;
	Closeable		= TRUE ;
	Hide			= TRUE;
    PushButton PB_PREV
    {
        Size = MAP_APPFONT ( 50 , 14 ) ;
		Text [ en-US ] = "<< Back" ;
	};
    PushButton PB_NEXT
    {
        Size = MAP_APPFONT ( 50 , 14 ) ;
		Text [ en-US ] = "Next >>" ;
	};
    CancelButton PB_CANCEL
    {
        Size = MAP_APPFONT ( 50 , 14 ) ;
    };
    String ST_ACCEPT
    {
    	Text [ en-US ] = "Accept";
	};
    String ST_FINISH
    {
    	Text [ en-US ] = "Finish";
	};
